@model IEnumerable<gs10.Models.Applicant>

@{
    ViewBag.Title = "Passport Information";
}

<h3>Passport Information</h3>

@using (Html.BeginForm())
{
@Html.ValidationSummary(true)

<table class="table">

    <tr>
        <td>
            <h4>@ViewBag.TeamName</h4>
        </td>    
    </tr>

    <tr>
        <th nowrap>
            Submitted
        </th>
        <th nowrap>
            Name
        </th>
        @*<th nowrap>
            First Name
        </th>
        <th nowrap>
            Last Name
        </th>*@
        <th nowrap>
            Passport Name
        </th>
        <th nowrap>
            Passport Number
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td width="15%">
                @if (item.Submitted == true)
                {
                    <div class='submitted'>Status</div>
                }
                else
                {
                    <div class="notsubmitted">Not Submitted</div>
                }
            </td>
            <td width="15%">
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            @*<td width="15%">
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td width="15%">
                @Html.DisplayFor(modelItem => item.LastName)
            </td>*@   
            <td width="15%">
                @Html.DisplayFor(modelItem => item.NameOnPassport)
            </td>
            <td width="15%">
                @Html.DisplayFor(modelItem => item.PassportNumber)
            </td>
</tr>
    }

    @*<td>
        @Html.ActionLink("Edit", "Edit", new { id = item.ApplicantID }) |
        @Html.ActionLink("Details", "Details", new { id = item.ApplicantID }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.ApplicantID })
    </td>*@

</table>
}
